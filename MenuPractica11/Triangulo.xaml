<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MenuPractica11.Triangulo"
             Title="Triangulo">
    
    <StackLayout VerticalOptions="Center" HorizontalOptions="CenterAndExpand">
        <Label Text="Ingrese la base del triángulo:" />
        <Entry x:Name="BaseEntry" Placeholder="Base" Keyboard="Numeric" />

        <Label Text="Ingrese la altura del triángulo:" />
        <Entry x:Name="AlturaEntry" Placeholder="Altura" Keyboard="Numeric" />

        <Button Text="Calcular Superficie" Clicked="CalcularButton_Clicked" />

        <Label x:Name="SuperficieLabel" TextColor="Green" FontSize="20"
              HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
    </StackLayout>
    
</ContentPage>