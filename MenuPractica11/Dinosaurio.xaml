<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MenuPractica11.Dinosaurio"
             Title="Dinosaurio">

    <ScrollView>

        <VerticalStackLayout>

            <Entry x:Name="EntryKg"
            Placeholder="Dijite los peso(Kg)"
            Margin="10"
            FontSize="15"
            />

            <Entry x:Name="EntryMts"
            Placeholder="Dijite su altura(mts)"
            Margin="10"
            FontSize="15"
            />

            <Entry x:Name="EntryLb"
           Placeholder="libras"
           Margin="10"
           FontSize="15"
           IsEnabled="False"
      />

            <Entry x:Name="EntryCm"
            Placeholder="Centimetros"
            Margin="10"
            FontSize="15"
            IsEnabled="False"
     />

            <Button Text="Calcular"
             Clicked="Button_Clicked_1"
             Margin="10"
             BackgroundColor="Green"
             TextColor="White"/>

            <Button Text="Limpiar"
                    Clicked="Button_Clicked"
                    Margin="10"
                    TextColor="White"
                    BackgroundColor="Green"/>


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>